@model Product
@{
    ViewData["Title"] = "Details";
}

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" class="card-img rounded" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <span class="badge text-primary">Stock:@Model.Stock</span>
                <p class="lead">@Model.Description</p>
                <div class="col-md-3 text-warning">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-half"></i>
                    <i class="bi bi-star"></i>
                    <span class="badge text-success">60</span>
                </div>
                <div class="shadow px-1 my-3 bg-body-tertiary rounded col-md-4">
                    <span class="badge text-danger fs-6">@Model.Price.ToString("C")</span>
                    <br>
                    <a href="" class="btn btn-primary ms-2 mb-2">
                        <i class="bi bi-cart-plus-fill text-warning"></i>
                        Add To Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
